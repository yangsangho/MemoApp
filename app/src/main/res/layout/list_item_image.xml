<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="uri"
            type="String" />

        <variable
            name="holder"
            type="kr.yangbob.memoapp.view.ImageViewHolder" />

        <variable
            name="requestManager"
            type="com.bumptech.glide.RequestManager" />

        <variable
            name="activity"
            type="kr.yangbob.memoapp.view.CrudActivity" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/image_list_size"
        android:layout_height="@dimen/image_list_size"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{holder::clickImage}"
        android:paddingStart="2dp"
        android:paddingTop="2dp"
        android:paddingEnd="2dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:setRequestManager="@{requestManager}"
            app:setUriSmall="@{uri}"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:onClick="@{holder::clickImageDeleteBtn}"
            android:scaleType="fitCenter"
            android:visibility="@{activity.canDelete ? View.VISIBLE : View.GONE}"
            app:srcCompat="@drawable/ic_remove_circle_24dp" />
    </FrameLayout>
</layout>
